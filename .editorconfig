# EditorConfig: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.json,*.json5}]
indent_size = 2
tab_width = 2

[*.md]
indent_size = 2
# Markdown files sometimes need trailing whitespaces.
trim_trailing_whitespace = false

[{*.yaml,*.yml}]
indent_size = 2
max_line_length = 120
tab_width = 2
