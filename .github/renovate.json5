{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:best-practices",
    ":semanticCommits"
  ],
  labels: [
    "dependencies",
  ],
  packageRules: [
    {
      automerge: true,
      automergeStrategy: "squash",
      automergeType: "pr",
      matchUpdateTypes: [
        "patch",
        "pin",
        "digest",
      ],
    }
  ],
  platformAutomerge: true,
  rangeStrategy: "pin",
  vulnerabilityAlerts: {
    enabled: true,
  },
}
